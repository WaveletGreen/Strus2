<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>

	<package name="fancyears" namespace="/" extends="struts-default">
		<!-- 左边是类名，右边是方法 -->
		<action name="user*_*" class="actions.{1}" method="{2}">
			<result>
				/jsp/{2}Sucez.jsp
			</result>
			<result name="input">
				/jsp/{2}.jsp
			</result>
			<result name="error">
				/jsp/error{2}.jsp
			</result>

			<result name="commonPage">
				/jsp/viewAllSucez.jsp
			</result>
		</action>
		<action name="file*" class="actions.{1}">
			<result>
				/jsp/{1}Success.jsp
			</result>

		</action>
		<action name="download*_*" class="action.{1}">
			<result name="{1}" type="stream">
				<param name="contentdDisposition">attachment;filename="{2}"</param>
				<param name="inputName">downloadStream</param>
				/jsp/{1}Success.jsp
			</result>
		</action>
	</package>
</struts>    
